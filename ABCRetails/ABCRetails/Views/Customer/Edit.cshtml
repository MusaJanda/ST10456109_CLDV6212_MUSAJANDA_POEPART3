@model IEnumerable<ABCRetails.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Customers</h1>
        <div>
            <span class="badge bg-primary">@Model.Count() Total Customers</span>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Orders</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.FullName</td>
                                    <td>@customer.Email</td>
                                    <td>@customer.Phone</td>
                                    <td>@customer.OrdersCount</td>
                                    <td>
                                        <span class="badge @(customer.Status == "Active" ? "bg-success" : "bg-secondary")">
                                            @customer.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(customer.Role == "Admin" ? "bg-danger" : "bg-info")">
                                            @customer.Role
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = customer.Id })" class="btn btn-sm btn-outline-primary">
                                            View
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = customer.Id })" class="btn btn-sm btn-outline-warning">
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No Customers Found</h4>
            <p>There are no customers in the system yet.</p>
        </div>
    }
</div>