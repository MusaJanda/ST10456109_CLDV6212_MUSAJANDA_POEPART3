@model ABCRetails.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<style>
    .edit-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .edit-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .edit-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

    .edit-card {
        background: var(--card-bg);
        border-radius: 20px;
        padding: 2rem;
        border: 1px solid var(--border-color);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .current-image {
        text-align: center;
        margin-bottom: 1rem;
    }

        .current-image img {
            max-width: 200px;
            max-height: 200px;
            border-radius: 10px;
            border: 2px solid var(--border-color);
        }

    /* Reuse the same form styles from Create view */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        color: var(--text-primary);
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        background: rgba(99, 102, 241, 0.05);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        color: var(--text-primary);
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
        width: 100%;
    }

        .form-control:focus {
            background: rgba(99, 102, 241, 0.1);
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.15);
            color: var(--text-primary);
        }

    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-start;
        margin-top: 2rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        border: none;
        border-radius: 10px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.4);
        }

    .btn-secondary {
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        color: var(--text-primary);
        text-decoration: none;
        display: inline-block;
    }

        .btn-secondary:hover {
            background: rgba(99, 102, 241, 0.2);
            color: var(--text-primary);
        }
</style>

<div class="edit-container">
    <div class="edit-header">
        <h2><i class="fas fa-edit me-2"></i> Edit Product</h2>
    </div>

    <div class="edit-card">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="current-image">
                    <p class="form-label">Current Image:</p>
                    <img src="@Model.ImageUrl" alt="@Model.ProductName" />
                </div>
            }

            <div class="form-group">
                <label asp-for="ProductName" class="form-label">
                    <i class="fas fa-tag me-2"></i>Product Name
                </label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">
                    <i class="fas fa-align-left me-2"></i>Description
                </label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="form-label">
                    <i class="fas fa-dollar-sign me-2"></i>Price
                </label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StockAvailable" class="form-label">
                    <i class="fas fa-boxes me-2"></i>Stock Available
                </label>
                <input asp-for="StockAvailable" class="form-control" type="number" />
                <span asp-validation-for="StockAvailable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="form-label">
                    <i class="fas fa-folder me-2"></i>Category
                </label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="imageFile" class="form-label">
                    <i class="fas fa-image me-2"></i>Product Image
                </label>
                <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" />
                <div class="form-text">Upload a new image to replace the current one</div>
                <div class="image-preview" id="imagePreview"></div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">
                        <i class="fas fa-check-circle me-2"></i>Active Product
                    </label>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Image preview functionality for edit
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';

            if (this.files && this.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    preview.appendChild(img);
                }

                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
}